{
	"name": "@dust-mail/server",
	"displayName": "Dust Mail Server",
	"version": "0.1.4",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist && rimraf .tsbuildinfo",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./jest-e2e.ts"
	},
	"dependencies": {
		"@dust-mail/autodiscover": "workspace:*",
		"@dust-mail/typings": "workspace:*",
		"@nestjs/common": "^8.4.6",
		"@nestjs/config": "^2.0.1",
		"@nestjs/core": "^8.4.6",
		"@nestjs/jwt": "^8.0.1",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-express": "^8.4.6",
		"@nestjs/serve-static": "^3.0.0",
		"@nestjs/throttler": "^2.0.1",
		"@redis/client": "^1.2.0",
		"@redis/json": "^1.0.3",
		"axios": "^0.27.2",
		"cache-manager": "^4.0.1",
		"cookie-parser": "^1.4.6",
		"fs-extra": "^10.1.0",
		"helmet": "^5.1.0",
		"imap": "^0.8.19",
		"ioredis": "^5.2.1",
		"kleur": "^4.1.4",
		"mailparser": "^3.5.0",
		"nodemailer": "^6.7.7",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"redis": "^4.2.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.5",
		"sanitize-html": "^2.7.0",
		"ua-parser-js": "^1.0.2",
		"validator": "^13.7.0"
	},
	"devDependencies": {
		"@dust-mail/tsconfig": "workspace:*",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^8.0.11",
		"@nestjs/testing": "^8.4.6",
		"@types/cache-manager": "^4.0.0",
		"@types/cookie-parser": "^1.4.3",
		"@types/express": "^4.17.13",
		"@types/fs-extra": "^9.0.13",
		"@types/imap": "^0.8.35",
		"@types/jest": "^27.5.1",
		"@types/mailparser": "^3.4.0",
		"@types/node": "^17.0.38",
		"@types/nodemailer": "^6.4.4",
		"@types/passport-jwt": "^3.0.6",
		"@types/sanitize-html": "^2.6.2",
		"@types/supertest": "^2.0.12",
		"@types/ua-parser-js": "^0.7.36",
		"@types/validator": "^13.7.2",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.3",
		"ts-loader": "^9.3.0",
		"ts-node": "^10.8.0",
		"tsconfig-paths": "^4.0.0",
		"tsconfig-paths-jest": "^0.0.1",
		"typescript": "^4.7.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
