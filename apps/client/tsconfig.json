{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@dust-mail/tsconfig/vite-react.json",
	"compilerOptions": {
		"noEmit": true,
		"types": ["vite/client"],
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@utils/*": ["utils/*"],
			"@components/*": ["components/*"],
			"@interfaces/*": ["interfaces/*"],
			"@styles/*": ["styles/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
