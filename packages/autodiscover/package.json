{
	"name": "@dust-mail/autodiscover",
	"displayName": "Dust Mail Discover",
	"description": "A simple package to find any imap, pop3 and smtp servers related to an email address",
	"author": {
		"name": "Guus van Meerveld"
	},
	"repository": {
		"url": "https://github.com/Guusvanmeerveld/Dust-Mail"
	},
	"license": "MIT",
	"version": "0.1.2",
	"main": "lib/index.cjs",
	"module": "lib/index.es",
	"types": "lib/types/src",
	"scripts": {
		"format": "prettier src --write",
		"build": "rollup -c --configPlugin rollup-plugin-typescript2",
		"dev": "rollup -cw --configPlugin rollup-plugin-typescript2",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "eslint src"
	},
	"devDependencies": {
		"@dust-mail/tsconfig": "workspace:*",
		"@rollup/plugin-json": "^4.1.0",
		"@types/node": "^15.0.2",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.0",
		"c8": "^7.12.0",
		"eslint": "^7.25.0",
		"eslint-plugin-prettier": "^3.4.0",
		"prettier": "2.2.1",
		"rollup": "^2.56.3",
		"rollup-plugin-typescript2": "^0.31.1",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.12.0",
		"tsconfig-paths-jest": "^0.0.1",
		"tslib": "^2.4.0",
		"typescript": "^4.2.4",
		"vitest": "^0.20.3"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"fast-xml-parser": "^4.0.8"
	}
}
